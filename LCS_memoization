#include<bits/stdc++.h> 
#include<string>
#include <iostream>
using namespace std;

int t[1001][1001];

int lcs(string &X, string &Y, int m, int n ) 
{ 
    if (m == 0 || n == 0) 
	  return 0; 
	  if(t[m][n]!=-1)
	  return t[m][n];
    if (X[m-1] == Y[n-1]) 
	  return t[m][n] = 1 + lcs(X, Y, m-1, n-1); 
    else
  	return t[m][n] = max(lcs(X, Y, m, n-1), lcs(X, Y, m-1, n)); 
} 

int max(int a, int b) 
{ 
	return (a > b)? a : b; 
} 

int main() 
{ 
  string X,Y;
  cin>>X>>Y;
  int m = X.size(); 
  int n = Y.size(); 
  memset(t,-1,sizeof(t));
  printf("Length of LCS is %d", lcs( X, Y, m, n ) ); 
  return 0; 
} 
